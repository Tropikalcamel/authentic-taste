<% @restaurant.reviews.each_with_index  do |review, index| %>
<div class="profile-taster">
  <div class="profile-img-taster">
    <img src="<%= @teachers_img[index] %>" alt="">
  </div>
  <div class="profile-info-taster">
      <div class="username-desc">
        <span class="taster-name-taster"><%= review.user.username %> </span>
        <span class="taster-about-taster"><%= review.user.description %> </span>
      </div>

    <div class="followbtn" onclick="toggleFollow(this)">
        <div class="taster-btn">
            <span class="v57_400">Follow</span>
        </div>
      </div>
  </div>
</div>

<% end %>
